.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.avatar-btn {
  border: none;
  background: transparent;
  padding: 0;
  margin-bottom: 40rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
}

.nickname-input {
  width: 80%;
  height: 80rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  background: #fff;
}

.login-btn {
  width: 80%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}
