<!-- pages/Profile/Profile.wxml -->
<view class="profile-container">
  <!-- 顶部导航栏显示用户名 -->
  <view class="nav-bar">
    <text class="username">{{userInfo.nickName || '用户'}}</text>
  </view>

  <!-- 上半部分：设备图片展示 -->
  <view class="device-section">
    <view class="section-title">我的设备</view>
    <view class="device-grid">
      <view class="device-item" wx:for="{{devices}}" wx:key="id">
        <image class="device-image" src="{{item.image}}" mode="aspectFit"></image>
        <text class="device-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- 下半部分：功能菜单 -->
  <view class="menu-section">
    <!-- 账号与安全组 -->
    <view class="menu-group">
      <view class="group-title">账号与安全</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goAccountSecurity">
          <text class="menu-icon">🔒</text>
          <text class="menu-text">账号与安全</text>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 帮助中心组 -->
    <view class="menu-group">
      <view class="group-title">帮助中心</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goHelpCenter">
          <text class="menu-icon">❓</text>
          <text class="menu-text">帮助中心</text>
          <text class="menu-arrow">></text>
        </view>
        <view class="menu-item" bindtap="contactCustomerService">
          <text class="menu-icon">💬</text>
          <text class="menu-text">联系客服</text>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>

    <!-- 关于组 -->
    <view class="menu-group">
      <view class="group-title">关于</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goAbout">
          <text class="menu-icon">ℹ️</text>
          <text class="menu-text">关于</text>
          <text class="menu-arrow">></text>
        </view>
      </view>
    </view>
  </view>
</view>