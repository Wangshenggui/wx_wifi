/* pages/Profile/Profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 设备展示区域 */
.device-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.device-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 40rpx;
}

.device-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
}

.device-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  margin-bottom: 16rpx;
}

.device-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 菜单区域 */
.menu-section {
  margin: 20rpx;
}

.menu-group {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.group-title {
  font-size: 28rpx;
  color: #999;
  padding: 24rpx 30rpx 16rpx;
}

.menu-list {
  border-top: 1rpx solid #f0f0f0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 28rpx;
}